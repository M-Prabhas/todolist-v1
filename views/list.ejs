<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>to do list</title>
    <link rel="stylesheet" href="Todolist v1 Starting Styles/styles.css">
  </head>
  <body>
    <div class="box" id="heading">
      <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">
      <%  for(var i=0;i<newListItems.length;i++){  %>
        <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" onChange="this.form.submit()"  >
          <p><%= newListItems[i].name %></p>
          </div>
        </form>

        <% } %>

        <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="newItem" autocomplete="off">
        <button type="submit" name="button" value=<%= listTitle %>>+</button>
        </form>
    </div>




  </body>
</html>
